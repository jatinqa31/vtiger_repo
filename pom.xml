	<groupId>Vtiger-latest</groupId>
	<artifactId>Vtiger-latest</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>Vtiger</name>
	<url>http://maven.apache.org</url>
